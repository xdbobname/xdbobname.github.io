	<script type="text/javascript">
		function resetForm(){
			document.getElementById('studentAccount').reset();
		}
		function computeAccount(){
			var account = document.getElementById("studentAccount").value;
			var conversionTable = new Array('4', '5', '6', '7', '8', '9', ':', ';', '<', '=')
			var outputAccount = '{SRUN2}x'
			for(var i = 0; i < account.length; i++){
				outputAccount += conversionTable[parseInt(account[i])]
			}
			outputAccount += '@dx'
			document.getElementById("demo").innerHTML=outputAccount;
		}
		function setToday() {
			today = new Date();
			document.getElementById("SY").value = today.getFullYear();
			document.getElementById("SM").value = today.getMonth() + 1;
			document.getElementById("SD").value = today.getDate();
		}
		function cala() {
		    y = document.getElementById("SY").value;
		    m = document.getElementById("SM").value;
		    d = document.getElementById("SD").value;
		    ddd = document.getElementById("decday").value;
		    ttt = new Date(y, m - 1, d).getTime() + ddd * 24 * 60 * 60 * 1000;
		    theday = new Date();
		    theday.setTime(ttt);
		    document.getElementById("result1").innerHTML = theday.getFullYear() + "年" + (1 + theday.getMonth()) + "月" + theday.getDate() + "日";
		}
	</script>
